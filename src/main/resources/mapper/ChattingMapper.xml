<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aigc.vrmetal.mapper.ChattingMapper">

    <select id="getTalks" resultType="com.aigc.vrmetal.pojo.vo.ChatVo">
        SELECT chatting.*,user.username FROM `chatting`,`user`
        <where>
            user.id=chatting.user_id
        <if test="chatPageQueryDto.chatEmo !=null and chatPageQueryDto.chatEmo!=''">
            and chatting.chat_emo=#{chatPageQueryDto.chatEmo}
        </if>
        </where>
    </select>
</mapper>
